/*
 * Algoritmo para calcular a tabuada de um número 'x' qualquer.
 */

programa
{
	
	funcao inicio()
	{
		inteiro tab, num, i=0
		escreva("Digite um número ver a tabuada: ")
		leia(num)
		limpa()

		para( i=1; i <= 10; i++){
			tab = num * i
			
			escreva(num, " x ", i, " = ","\t",tab,"\n")

		}
			

		}
	}
